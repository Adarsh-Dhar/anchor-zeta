{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["mocha", "chai", "node"],
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "target/types/*"]
    }
  },
  "include": ["tests/**/*", "target/**/*"],
  "exclude": ["app/**/*", "node_modules", "dist"]
}
